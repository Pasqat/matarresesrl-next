# Resend (obbligatorio per invio email)
RESEND_API_KEY=re_xxxx  # Get it from https://resend.com/api-keys
CONTACT_FROM=no-reply@tuodominio.com
CONTACT_TO=sales@tuodominio.com

# Rate limiting (opzionale)
RATE_LIMIT_WINDOW=60  # Finestra in secondi
RATE_LIMIT_MAX=10     # Massime richieste per IP nella finestra

# Odoo integration (opzionale)
ODOO_ENABLED=false    # Imposta 'true' per abilitare
ODOO_MUST_SYNC=false  # Imposta 'true' per rendere errori Odoo bloccanti
ODOO_URL=https://odoo.example.com/jsonrpc
ODOO_DB=nome_database
ODOO_USER=admin
ODOO_PASS=password

# Retry configuration (opzionale)
ODOO_RETRY_MAX=3      # Numero massimo di tentativi
ODOO_RETRY_BASE_MS=200  # Intervallo base per exponential backoff
