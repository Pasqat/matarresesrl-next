# API URL Wordpress
NEXT_PUBLIC_WP_API_URL=https://example.com/graphql
# NEXT_PUBLIC_WP_API_URL=https://localhost/example/graphql
NEXT_PUBLIC_DOMAIN=https://example.com

# JWT/Token config
EXPIRES_AT_INDEX_IN_TOKEN=exp
REFRESH_TOKEN_INDEX_IN_SERVER_AUTH_JSON_RESPONSE=refreshToken
ACCESS_TOKEN_INDEX_IN_SERVER_AUTH_JSON_RESPONSE=authToken
SECRET_COOKIE_PASSWORD=AnExtremelyStrongSecretForASecurePreviewSession

# Google Tag Manager & Facebook Pixel
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXX

# Google Maps API
NEXT_PUBLIC_MAPS_API=AIzaSy...

# MailerLite API Key (opzionale)
MAILERLITE_API_KEY=...

# Resend (obbligatorio per invio email)
RESEND_API_KEY=
CONTACT_FROM=no-replay@example.com
CONTACT_TO=

# Rate limiting (opzionale)
RATE_LIMIT_WINDOW=60  # Finestra in secondi
RATE_LIMIT_MAX=10     # Massime richieste per IP nella finestra

# Odoo integration (opzionale)
ODOO_ENABLED=true
# Imposta 'true' per rendere errori Odoo bloccanti
ODOO_MUST_SYNC=true
ODOO_URL=https://your-odoo-domain.com
ODOO_DB=your-odoo-domain
ODOO_USER=your-odoo-user@email.com
# Solo API key, la password non è più usata
ODOO_API_KEY=your-odoo-api-key
# Retry configuration (opzionale)
ODOO_RETRY_MAX=3
# Intervallo base per exponential backoff
ODOO_RETRY_BASE_MS=200
